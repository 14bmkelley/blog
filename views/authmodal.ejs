
<div class="modal fade authmodal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form class="auth">

                <div class="modal-header">
                    <h5 class="modal-title">uniq login</h5>
                    <button type="button" class="close" data-dismiss="modal" data-target=".authmodal">
                        <span>&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="alert alert-warning" style="display: none;"></div>
                    <input class="form-control mb-2" type="text" placeholder="email">
                    <input class="form-control" type="password" placeholder="password">
                    <div class="form-group form-check mt-2">
                        <input type="checkbox" class="form-check-input" id="authmodal-check">
                        <label class="form-check-label" for="authmodal-check">register as a new user.</label>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" data-target=".authmodal">Close</button>
                    <button type="submit" class="btn btn-primary">login</button>
                </div>

            </form>
        </div>
    </div>
</div>

